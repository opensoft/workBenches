{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "openagent",
  "plugin": [
    "oh-my-opencode",
    "opencode-gemini-auth@1.3.6",
    "opencode-openai-codex-auth@4.2.0"
  ],
  "provider": {
    "anthropic": {
      "name": "Anthropic",
      "models": {
        "claude-opus-4-5": {
          "name": "Claude Opus 4.5",
          "thinking": true,
          "attachment": true,
          "temperature": 0.1,
          "limit": {
            "context": 200000,
            "output": 64000
          }
        },
        "claude-sonnet-4-5": {
          "name": "Claude Sonnet 4.5",
          "thinking": true,
          "attachment": true,
          "temperature": 0.1,
          "limit": {
            "context": 200000,
            "output": 16000
          }
        },
        "claude-sonnet-4": {
          "name": "Claude Sonnet 4",
          "attachment": true,
          "temperature": 0.1,
          "limit": {
            "context": 200000,
            "output": 16000
          }
        },
        "claude-haiku-3-5": {
          "name": "Claude Haiku 3.5",
          "attachment": true,
          "temperature": 0.1,
          "limit": {
            "context": 200000,
            "output": 8192
          }
        }
      }
    },
    "google": {
      "name": "Google",
      "models": {
        "gemini-3-pro-preview": {
          "name": "Gemini 3 Pro (Preview)",
          "thinking": true,
          "attachment": true,
          "temperature": 0.1,
          "limit": {
            "context": 1048576,
            "output": 65535
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        },
        "gemini-3-flash-preview": {
          "name": "Gemini 3 Flash (Preview)",
          "attachment": true,
          "temperature": 0.1,
          "limit": {
            "context": 1048576,
            "output": 32000
          },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          }
        }
      }
    },
    "openai": {
      "name": "OpenAI",
      "models": {
        "gpt-5.2": {
          "name": "GPT-5.2"
        },
        "o3": {
          "name": "o3",
          "thinking": true
        },
        "o4-mini": {
          "name": "o4-mini",
          "thinking": true
        },
        "codex-1": {
          "name": "Codex-1"
        }
      }
    }
  }
}
